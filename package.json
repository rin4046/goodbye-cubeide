{
  "name": "goodbye-cubeide",
  "displayName": "Goodbye CubeIDE",
  "version": "0.0.3",
  "preview": true,
  "description": "An extension for people who don't like CubeIDE.",
  "categories": [
    "Other"
  ],
  "publisher": "rinrinme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rin4046/goodbye-cubeide"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.61.0"
  },
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-vscode.cpptools",
    "marus25.cortex-debug"
  ],
  "activationEvents": [
    "onCommand:goodbye-cubeide.initialize",
    "onCommand:goodbye-cubeide.refresh"
  ],
  "contributes": {
    "commands": [
      {
        "command": "goodbye-cubeide.initialize",
        "title": "Goodbye CubeIDE: Initialize Project"
      },
      {
        "command": "goodbye-cubeide.refresh",
        "title": "Goodbye CubeIDE: Refresh and Build Project"
      }
    ],
    "configuration": {
      "title": "Goodbye CubeIDE",
      "properties": {
        "goodbye-cubeide.cubeIdePath": {
          "type": "string",
          "default": ""
        },
        "goodbye-cubeide.cubeIdeWorkspacePath": {
          "type": "string",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=./out/extension.js --external:vscode --external:canvas --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --minify",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jsdom": "^16.2.13",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.13.9",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "patch-package": "^6.4.7",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "jsdom": "^18.0.0"
  }
}
